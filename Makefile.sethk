LFLAGS= -lncurses $(LDISPLAY)

MEROKO_OBJ = meroko.o nubus.o raven_cpu.o nubus.o nupi.o mem8.o sib.o enet.o localbus.o\
	$(DISPLAY_OBJ)

all: meroko

meroko: $(MEROKO_OBJ) 
	$(CC) $(MEROKO_OBJ) -o meroko $(CFLAGS) $(LFLAGS)

